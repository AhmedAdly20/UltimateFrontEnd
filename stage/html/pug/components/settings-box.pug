.settings-box.hide-settings Setting
  .toggle-settings
    i.fa.fa-gear.fa-lg
  .settings-content
    .option-box.color-options.text-center
      h4.option-title Color Options
      -  var themes = ["green-theme","blue-theme","red-theme","orange-theme","midnight-theme","yellow-theme"]
      ul.list-unstyled
        each theme in themes
          li(data-theme=theme)
    .option-box.font-options
      h4.option-title.text-center Font Options
      -  var fonts = ["open","source","roboto","noto"]
      select.form-control
        each font in fonts
          option(value=font class=font)=font + ' Font'
    .option-box
      h4.option-title.text-center SideBar Options
